{
  "name": "liverylab-repaint",
  "version": "1.0.1",
  "description": "A Windows desktop application for livery designers to preview their work on 3D vehicle models in near real-time",
  "main": "src/main/main.js",
  "scripts": {
    "bundle": "esbuild src/renderer/renderer.js --bundle --outfile=src/renderer/renderer.bundle.js --platform=node --external:electron --external:fs --external:path --external:os --external:crypto --external:chokidar --external:psd --format=cjs",
    "start": "npm run bundle && electron . --max-old-space-size=4096",
    "dev": "npm run bundle && electron . --max-old-space-size=4096",
    "build": "npm run bundle && electron-builder --win",
    "build:dir": "npm run bundle && electron-builder --win --dir",
    "build:installer": "npm run bundle && electron-builder --win --dir && node scripts/build-installer.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "livery",
    "viewer",
    "3d",
    "electron",
    "threejs"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "electron": "^40.0.0",
    "electron-builder": "^26.4.0",
    "esbuild": "^0.27.2"
  },
  "dependencies": {
    "ag-psd": "^29.1.0",
    "chokidar": "^5.0.0",
    "electron-updater": "^6.7.3",
    "psd": "^3.4.0",
    "three": "^0.182.0"
  },
  "build": {
    "appId": "com.liverylab.repaint",
    "productName": "LiveryLab Repaint",
    "icon": "src/assets/logol.ico",
    "directories": {
      "output": "dist"
    },
    "asar": true,
    "asarUnpack": [
      "**/*.node",
      "**/node_modules/psd/**/*"
    ],
    "files": [
      "src/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "signAndEditExecutable": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "publish": {
      "provider": "github",
      "owner": "ttolerantss",
      "repo": "liverylab-repaint"
    }
  }
}
